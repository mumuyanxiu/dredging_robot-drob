<?xml version="1.0" encoding="utf-8"?>
<!-- 汽车轮子 xacro 文件 -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- 恢复前轮，但配置为无阻力的从动轮 -->
  <link name="rfw">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="2.0" />
      <inertia 
        ixx="0.01"
        ixy="0"
        ixz="0"
        iyy="0.01"
        iyz="0"
        izz="0.01" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.04" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.04" />
      </geometry>
    </collision>
  </link>

  <link name="lfw">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="2.0" />
      <inertia 
        ixx="0.01"
        ixy="0"
        ixz="0"
        iyy="0.01"
        iyz="0"
        izz="0.01" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.04" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.04" />
      </geometry>
    </collision>
  </link>

  <link name="rbw">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="2.0" />
      <inertia 
        ixx="0.01"
        ixy="0"
        ixz="0"
        iyy="0.01"
        iyz="0"
        izz="0.01" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.04" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.04" />
      </geometry>
    </collision>
  </link>

  <link name="lbw">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="2.0" />
      <inertia 
        ixx="0.01"
        ixy="0"
        ixz="0"
        iyy="0.01"
        iyz="0"
        izz="0.01" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.04" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.04" />
      </geometry>
    </collision>
  </link>

  <!-- 前轮关节 - 配置为极低摩擦的自由转动 -->
  <joint name="rfj" type="continuous">
    <origin xyz="-0.2 -0.15 -0.09" rpy="1.5708 0 0" />
    <parent link="base_link" />
    <child link="rfw" />
    <axis xyz="0 0 -1" />
    <dynamics damping="0.001" friction="0.001" />
  </joint>

  <joint name="lfj" type="continuous">
    <origin xyz="-0.2 0.15 -0.09" rpy="1.5708 0 0" />
    <parent link="base_link" />
    <child link="lfw" />
    <axis xyz="0 0 -1" />
    <dynamics damping="0.001" friction="0.001" />
  </joint>

  <joint name="rbj" type="continuous">
    <origin xyz="0.2 -0.15 -0.09" rpy="1.5708 0 0" />
    <parent link="base_link" />
    <child link="rbw" />
    <axis xyz="0 0 -1" />
    <dynamics damping="0.2" friction="0.15" />
  </joint>

  <joint name="lbj" type="continuous">
    <origin xyz="0.2 0.15 -0.09" rpy="1.5708 0 0" />
    <parent link="base_link" />
    <child link="lbw" />
    <axis xyz="0 0 -1" />
    <dynamics damping="0.2" friction="0.15" />
  </joint>

  <!-- Gazebo标签 -->
  <!-- 前轮Gazebo配置 - 极低摩擦力 -->
  <gazebo reference="rfw">
    <material>Gazebo/Black</material>
    <mu1>0.001</mu1>
    <mu2>0.001</mu2>
    <kp>1000000.0</kp>
    <kd>10.0</kd>
    <selfCollide>false</selfCollide>
    <minDepth>0.001</minDepth>
    <maxVel>20.0</maxVel>
    <inertia>
      <ixx>0.01</ixx>
      <ixy>0</ixy>
      <ixz>0</ixz>
      <iyy>0.01</iyy>
      <iyz>0</iyz>
      <izz>0.01</izz>
    </inertia>
    <gravity>true</gravity>
  </gazebo>

  <gazebo reference="lfw">
    <material>Gazebo/Black</material>
    <mu1>0.001</mu1>
    <mu2>0.001</mu2>
    <kp>1000000.0</kp>
    <kd>10.0</kd>
    <selfCollide>false</selfCollide>
    <minDepth>0.001</minDepth>
    <maxVel>20.0</maxVel>
    <inertia>
      <ixx>0.01</ixx>
      <ixy>0</ixy>
      <ixz>0</ixz>
      <iyy>0.01</iyy>
      <iyz>0</iyz>
      <izz>0.01</izz>
    </inertia>
    <gravity>true</gravity>
  </gazebo>

  <gazebo reference="rbw">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>10.0</kd>
    <selfCollide>false</selfCollide>
    <minDepth>0.001</minDepth>
    <maxVel>20.0</maxVel>
    <inertia>
      <ixx>0.01</ixx>
      <ixy>0</ixy>
      <ixz>0</ixz>
      <iyy>0.01</iyy>
      <iyz>0</iyz>
      <izz>0.01</izz>
    </inertia>
    <gravity>true</gravity>
  </gazebo>

  <gazebo reference="lbw">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>10.0</kd>
    <selfCollide>false</selfCollide>
    <minDepth>0.001</minDepth>
    <maxVel>20.0</maxVel>
    <inertia>
      <ixx>0.01</ixx>
      <ixy>0</ixy>
      <ixz>0</ixz>
      <iyy>0.01</iyy>
      <iyz>0</iyz>
      <izz>0.01</izz>
    </inertia>
    <gravity>true</gravity>
  </gazebo>

  <!-- 前轮关节的Gazebo插件 - 自由转动 -->
  <gazebo reference="rfj">
    <provideFeedback>true</provideFeedback>
    <implicitSpringDamper>0</implicitSpringDamper>
  </gazebo>

  <gazebo reference="lfj">
    <provideFeedback>true</provideFeedback>
    <implicitSpringDamper>0</implicitSpringDamper>
  </gazebo>

  <gazebo reference="rbj">
    <provideFeedback>true</provideFeedback>
    <implicitSpringDamper>0</implicitSpringDamper>
  </gazebo>

  <gazebo reference="lbj">
    <provideFeedback>true</provideFeedback>
    <implicitSpringDamper>0</implicitSpringDamper>
  </gazebo>
</robot> 