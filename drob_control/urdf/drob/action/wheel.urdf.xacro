    </collision>
  </link>

  <!-- 四个轮子关节 -->
  <joint name="rfj" type="continuous">
    <origin xyz="-0.2 -0.15 -0.09" rpy="1.5708 0 0" />
    <parent link="base_link" />
    <child link="rfw" />
    <axis xyz="0 0 -1" />
  </joint>

  <joint name="lfj" type="continuous">
    <origin xyz="-0.2 0.15 -0.09" rpy="1.5708 0 0" />
    <parent link="base_link" />
    <child link="lfw" />
    <axis xyz="0 0 -1" />
  </joint>

  <joint name="rbj" type="continuous">
    <origin xyz="0.2 -0.15 -0.09" rpy="1.5708 0 0" />
    <parent link="base_link" />
    <child link="rbw" />
    <axis xyz="0 0 -1" />
  </joint>

  <joint name="lbj" type="continuous">
    <origin xyz="0.2 0.15 -0.09" rpy="1.5708 0 0" />
    <parent link="base_link" />
    <child link="lbw" />
    <axis xyz="0 0 -1" />
  </joint>

  <!-- Gazebo标签 -->
  <gazebo reference="rfw">
    <material>Gazebo/Black</material>
    <mu1>0.8</mu1>
    <mu2>0.8</mu2>
    <kp>1000000.0</kp>
    <kd>50.0</kd>
    <selfCollide>false</selfCollide>
    <minDepth>0.001</minDepth>
  </gazebo>

