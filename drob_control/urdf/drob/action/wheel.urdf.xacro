<?xml version="1.0" encoding="utf-8"?>
<!-- 汽车轮子 xacro 文件 -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- 四个轮子链接 -->
  <link name="rfw">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.8" />
      <inertia 
        ixx="0.001"
        ixy="0"
        ixz="0"
        iyy="0.001"
        iyz="0"
        izz="0.001" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.04" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.04" />
      </geometry>
    </collision>
  </link>

