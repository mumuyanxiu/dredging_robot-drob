<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="drob_ros2_control">
        <ros2_control name="DrobGazeboSystem" type="system">
            <hardware>
                <plugin>gazebo_ros2_control/GazeboSystem</plugin>
            </hardware>
            
            <!-- 左前轮 - 恢复完整控制接口 -->
            <joint name="lfj">
                <command_interface name="velocity">
                    <param name="min">-15</param>
                    <param name="max">15</param>
                </command_interface>
                <command_interface name="effort">
                    <param name="min">-2</param>
                    <param name="max">2</param>
                </command_interface>
                <state_interface name="position" />
                <state_interface name="velocity" />
                <state_interface name="effort" />
            </joint>
            
            <!-- 左后轮 -->
            <joint name="lbj">
                <command_interface name="velocity">
                    <param name="min">-15</param>
                    <param name="max">15</param>
                </command_interface>
                <command_interface name="effort">
                    <param name="min">-2</param>
                    <param name="max">2</param>
                </command_interface>
                <state_interface name="position" />
                <state_interface name="velocity" />
                <state_interface name="effort" />
            </joint>
            
            <!-- 右前轮 - 恢复完整控制接口 -->
            <joint name="rfj">
                <command_interface name="velocity">
                    <param name="min">-15</param>
                    <param name="max">15</param>
                </command_interface>
                <command_interface name="effort">
                    <param name="min">-2</param>
                    <param name="max">2</param>
                </command_interface>
                <state_interface name="position" />
                <state_interface name="velocity" />
                <state_interface name="effort" />
            </joint>
            
            <!-- 右后轮 -->
            <joint name="rbj">
                <command_interface name="velocity">
                    <param name="min">-15</param>
                    <param name="max">15</param>
                </command_interface>
                <command_interface name="effort">
                    <param name="min">-2</param>
                    <param name="max">2</param>
                </command_interface>
                <state_interface name="position" />
                <state_interface name="velocity" />
                <state_interface name="effort" />
            </joint>
        </ros2_control>
        
        <gazebo>
            <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
                <parameters>$(find drob_control)/config/controllers.yaml</parameters>
                <ros>
                    <remapping>/drob_left_front_velocity_controller/commands:=/drob_left_front_velocity_controller/commands</remapping>
                    <remapping>/drob_right_front_velocity_controller/commands:=/drob_right_front_velocity_controller/commands</remapping>
                    <remapping>/drob_left_back_velocity_controller/commands:=/drob_left_back_velocity_controller/commands</remapping>
                    <remapping>/drob_right_back_velocity_controller/commands:=/drob_right_back_velocity_controller/commands</remapping>
                </ros>
            </plugin>
        </gazebo>
        
        <!-- 为所有轮子关节添加Gazebo插件 -->
        <gazebo reference="lfj">
            <provideFeedback>true</provideFeedback>
        </gazebo>
        
        <gazebo reference="lbj">
            <provideFeedback>true</provideFeedback>
        </gazebo>
        
        <gazebo reference="rfj">
            <provideFeedback>true</provideFeedback>
        </gazebo>
        
        <gazebo reference="rbj">
            <provideFeedback>true</provideFeedback>
        </gazebo>
    </xacro:macro>
</robot>
